<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPlaceActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/swedishbackground2"
        tools:context=".AddplaceActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/addSignedInButton"
            android:layout_width="131dp"
            android:layout_height="51dp"
            android:layout_marginTop="76dp"
            android:backgroundTint="#009688"
            android:fontFamily="serif-monospace"
            android:text="Lägg till"
            android:textColor="#0B0909"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/infoTextView" />

        <Button
            android:id="@+id/goBackButton"
            android:layout_width="116dp"
            android:layout_height="49dp"
            android:layout_marginTop="392dp"
            android:backgroundTint="#009688"
            android:fontFamily="serif-monospace"
            android:text="Logga ut"
            android:textColor="#0B0909"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/infoTextView" />

        <TextView
            android:id="@+id/infoTextView"
            android:layout_width="352dp"
            android:layout_height="197dp"
            android:layout_marginTop="50dp"
            android:fontFamily="serif-monospace"
            android:text="Nu när du är inloggad kan du lägga till egna smultronställen till vår sida. Tryck Lägg till för att börja, eller välj Logga ut"
            android:textAlignment="center"
            android:textColor="#0B0909"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>